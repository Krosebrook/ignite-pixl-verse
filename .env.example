# FlashFusion Creative Mega App - Environment Variables
# Copy this file to .env and fill in the actual values
# NEVER commit .env to version control!

# ============================================================================
# SUPABASE (Auto-configured by Lovable Cloud - DO NOT EDIT MANUALLY)
# ============================================================================
VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
VITE_SUPABASE_PROJECT_ID=xxxxx

# ============================================================================
# LOVABLE AI (For content generation)
# ============================================================================
LOVABLE_API_KEY=lov_xxx_your_api_key_here

# ============================================================================
# STRIPE (Billing & Payments)
# ============================================================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx_or_pk_live_xxx
STRIPE_SECRET_KEY=sk_test_xxx_or_sk_live_xxx # Server-side only (Edge Functions)
STRIPE_WEBHOOK_SECRET=whsec_xxx # For webhook signature verification

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
VITE_POSTHOG_KEY=phc_xxx
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
VITE_ENABLE_VIDEO_GENERATION=true
VITE_ENABLE_MUSIC_GENERATION=false
VITE_ENABLE_MARKETPLACE=true

# ============================================================================
# EDGE FUNCTION SECRETS (Set via Supabase Dashboard or CLI)
# These are NOT prefixed with VITE_ (not exposed to frontend)
# ============================================================================
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
# OPENAI_API_KEY=sk-xxx # If using OpenAI directly
# ANTHROPIC_API_KEY=sk-ant-xxx # If using Anthropic Claude

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Future)
# ============================================================================
# INSTAGRAM_CLIENT_ID=xxx
# INSTAGRAM_CLIENT_SECRET=xxx
# FACEBOOK_APP_ID=xxx
# FACEBOOK_APP_SECRET=xxx
# TWITTER_API_KEY=xxx
# TWITTER_API_SECRET=xxx

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
# LOG_LEVEL=debug
# DISABLE_RATE_LIMITING=true
